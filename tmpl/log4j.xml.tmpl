<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
	<!-- log4j configuration -->

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{ISO8601} %-5p [%-15c] - %m%n" />
		</layout>
	</appender>

	<!-- The file reference will need to changed so it is not relative.  This is a 
		kludge to get things working for now. We need to use Ant to set some properties
		dynamically so that it builds in all environments.
	-->
	<appender name="fileAppender"
		class="org.apache.log4j.FileAppender">
		<param name="File" value="@logfilepath@" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{ISO8601} %-5p [%-15c] - %m%n" />
		</layout>
	</appender>

	<appender name="file"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="File" value="@logfilepath@" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>

	<category name="com.sun">
		<priority value="@deflevel@" />
	</category>

	<category name="org.springframework">
		<priority value="@deflevel@" />
	</category>

	<category name="org.ncbo.stanford">
		<priority value="@bioportallevel@" />
	</category>

	<category name="org.ncbo.stanford.view.filter">
		<priority value="@deflevel@" />
	</category>

	<root>
		<priority value="@deflevel@" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>	
</log4j:configuration>
