<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util 
       http://www.springframework.org/schema/util/spring-util-2.5.xsd
       http://www.springframework.org/schema/tx 
       http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
       http://www.springframework.org/schema/aop 
       http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
	
	<!-- Data source info --> 
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="@bioportaljdbcdriver@" />
		<property name="jdbcUrl" value="@bioportaljdbcurl@" />
		<property name="properties">
			<props>
				<prop key="user">@bioportaljdbcusername@</prop>
				<prop key="password">@bioportaljdbcpassword@</prop>
				<prop key="hibernate.c3p0.acquire_increment">@bioportaljdbcc3p0acquire_increment@</prop>
				<prop key="hibernate.c3p0.idle_test_period">@bioportaljdbcc3p0idle_test_period@</prop>
				<prop key="hibernate.c3p0.timeout">@bioportaljdbcc3p0timeout@</prop>
				<prop key="hibernate.c3p0.max_size">@bioportaljdbcc3p0max_size@</prop>
				<prop key="hibernate.c3p0.max_statements">@bioportaljdbcc3p0max_statements@</prop>
				<prop key="hibernate.c3p0.min_size">@bioportaljdbcc3p0min_size@</prop>				
			</props>
		</property>
	</bean>
</beans>
