<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util 
       http://www.springframework.org/schema/util/spring-util-2.5.xsd
       http://www.springframework.org/schema/tx 
       http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
       http://www.springframework.org/schema/aop 
       http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<!-- Datasource definitions: In production, use JNDI datasource -->
	
	<!-- Data source info. Comment if JDBC is being used 
	<bean id="dataSource"
		class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>@bioportaldatasource@</value>
		</property>
	</bean>
	-->

	<!-- JDBC info. Comment if data source is being used -->
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName">
			<value>@bioportaljdbcdriver@</value>
		</property>
		<property name="url">
			<value>@bioportaljdbcurl@</value>
		</property>
		<property name="username">
			<value>@bioportaljdbcusername@</value>
		</property>
		<property name="password">
			<value>@bioportaljdbcpassword@</value>
		</property>
	</bean>
</beans>
