<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util-2.5.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<bean id="authenticationService"
		class="org.ncbo.stanford.util.security.authentication.impl.AuthenticationServiceImpl">
		<property name="userService">
			<ref bean="userService" />
		</property>
		<property name="encryptionService">
			<ref bean="encryptionService" />
		</property>
		<property name="sessionService">
			<ref bean="sessionService" />
		</property>
	</bean>

	<util:set id="authenticationExceptionReferrers" set-class="java.util.TreeSet">
		<value>http://www.bioontology.org/wiki/</value>
	</util:set>

	<util:set id="authenticationExceptionPaths" set-class="java.util.TreeSet">
	</util:set>

	<util:set id="authorizationExceptionPaths" set-class="java.util.TreeSet">
		<value>/auth</value>
		<value>/search</value>		
		<value>/search/{query}</value>
		<value>/search/meta/{query}</value>
		<value>/ontologies</value>
		<value>/ontologies/active/</value>
		<value>/ontologies/pulled/</value>
		<value>/ontologies/{ontologyversionid}</value>
		<value>/ontologies/versions/{ontologyid}</value>
		<value>/virtual/ontology/{ontologyid}</value>
		<value>/views/versions/{ontologyid}</value>
	</util:set>
</beans>